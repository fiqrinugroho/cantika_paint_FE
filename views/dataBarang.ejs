<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cantika Paint ! Data Barang</title>
    <%- include('partials/header') %>
  </head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1>Data Barang</h1>
        <button class="btn btn-success mb-3">Tambah Data</button>
              <table id="datatablesBarang" style="width:100%" class="table table-striped table-bordered text-center">
                  <thead class="text-center">
                      <tr>
                          <th>No</th>
                          <% if (branchId == 0) { %>
                          <th>Toko</th>
                          <% } %>
                          <th>Jenis</th>
                          <th>Warna</th>
                          <th>Stok</th>
                          <th>Aksi</th>
                      </tr>
                  </thead>
              <% if (items.length > 0) { %>
                  <tbody class="table-group-divider">
                      <% items.forEach(function(item, index) { %>
                          <tr>
                            <td><%= index+1 %></td>
                              <input type="text" hidden id="idData" value="<%= item.id %>" />
                              <% if (branchId == 0) { %>
                                  <td><%= item.branch.location %></td>
                              <% } %>
                              <td><%= item.type %></td>
                              <td><%= item.color %></td>
                              <td><%= item.stock %></td>
                              <td>
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-id="<%=item.id%>" data-bs-data="<%=item.out%>">Edit</button>
                                <a href="#" onclick="deleteData(`<%= item.id %>`,`/api/item/delete/`)" class="btn btn-danger btn-sm"
                                  >Delete</a
                                >
                              </td>
                          </tr>
                      <% }); %>
                      <% } else { %>
  
                      <% } %>
                  </tbody>
              </table>
              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Data Penjualan</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div id="liveAlertPlaceholder2" role="alert">
                        </div>
                         <input type="text" class="form-control" id="edit-id" name="id" hidden>
                        <div class="mb-3">
                            <div class="col-sm-1">
                                <label for="edit-type" class="col-form-label">Jenis:</label>
                            </div>
                            <input type="text" class="form-control" name="type" id="edit-type">
                        </div> 
                        <div class="mb-3">
                          <div class="row g-1 mt-2">
                            <div class="col-sm-1">
                              <label for="edit-color" class="col-form-label">Color:</label>
                            </div>
                              <input type="text" class="form-control" name="color" id="edit-color">
                          </div>
                        </div>
                        <div class="mb-3">
                          <div class="row g-1 mt-2">
                            <div class="col-sm-1">
                              <label for="edit-stock" class="col-form-label">Stok:</label>
                            </div>
                              <input type="text" class="form-control" name="stock" id="edit-stock">
                          </div>
                        </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="button" onclick="updateTransaction()" class="btn btn-primary">Update</button>
                        </div>
                      </form>
                  </div>
                </div>
              </div>
    <%- include('partials/footer') %>
</body>
</html>
